{% extends 'Frontend/Templates/frontend_layout.html.twig' %}

{% block frontend_content %}
    <section>

        <p>Voici l'ensemble des photos de la galerie "{{ galerie_entity.nom_galerie }}"</p>

        <div class="affichage_galerie">
            {% for photo in photos %}
                <div class="photo_dans_galerie">
                    <div class="descriptif_photo">{{ photo.serial_number }} : {{ photo.lieu }}</div>
                    <img alt="description" src="/images/{{ galerie_entity.nom_galerie ~ '/' ~ photo.serial_number }}">
                </div>
            {% endfor %}
        </div>
    </section>
{% endblock %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="/css/unegalerie.css">
{% endblock %}


